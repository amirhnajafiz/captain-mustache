#!/usr/bin/env bash

USER_NAME_OUT="$(uname -s)"

# Verify operating system is supported...
case "${USER_NAME_OUT}" in
    Linux*)             MACHINE=linux;;
    Darwin*)            MACHINE=mac;;
    *)                  MACHINE="UNKNOWN"
esac

if [ "$MACHINE" == "UNKNOWN" ]; then
    echo "Unsupported operating system [$(uname -s)]. Golang Mustache supports macOS, Linux, and Windows (WSL2)." >&2

    exit 1
fi
